_rf()
{
    local cur prev opts
    
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="--help 
          --verbose 
          --version 
          --tag 
          --function 
          --namespace 
          --variable
          --comp-db 
          --allow-root 
          --force 
          --dry-run
          --syntax-only"

    if [[ ${cur} == * ]]; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi
}

complete -F _rf rf